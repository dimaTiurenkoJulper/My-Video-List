<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Casts.CastsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.example.myfirstappfome.CastFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/movie_margin"
        android:layout_marginRight="@dimen/movie_margin"
        android:layout_marginBottom="50dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.Casts.CastsActivity"
        tools:listitem="@layout/fragment_cast" />

    <Button
        android:id="@+id/Casts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="addCast"
        android:text="@string/AddCast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list" />
</androidx.constraintlayout.widget.ConstraintLayout>