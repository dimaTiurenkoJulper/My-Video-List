<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myfirstappfome">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.Casts.addcast.AddCastImage" />
        <activity android:name=".ui.Casts.addcast.AddCast" />
        <activity android:name=".ui.AddMovie.AddImage" />
        <activity android:name=".ui.Casts.CastInfo" />
        <activity android:name=".ui.Casts.CastsActivity" />
        <activity android:name=".ui.MovieInfo" />

        <service
            android:name=".Services.MediaService"
            android:enabled="true"
            android:exported="true"
            android:permission="start/stop music"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name=".MainScreen"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>